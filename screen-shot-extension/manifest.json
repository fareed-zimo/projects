{
  "manifest_version": 3,
  "name": "Screen Shot Extension",
  "version": "1.0.0",
  "permissions": ["tabs", "activeTab", "storage", "scripting"],
  "action": { "default_popup": "index.html" },
  "host_permissions": ["http://*/*", "https://*/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
